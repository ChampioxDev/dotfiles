[colors]
; Background
bg = #222
; Background alternative
bg-alt = #444
; Foreground (e.g. text)
fg = #fff
; Foreground alternative
fg-alt = #555
; Blue for underlines
underline-blue = #198fe3
; Turquiose for underlines
underline-turquiose = #20e3b2
; Green for underlines
underline-green = #0ad14d
; Primary color
primary = #11ec36
; Secondary color
secondary = #e60053
; Warning Color
warn = #e22313

[bar/bar]
width = 100%                 ; Bar width
height = 30                  ; Bar height
radius = 6.0                 ; Round edges
fixed-center = false
background = ${colors.bg}    ; Bar background color
foreground = ${colors.fg}    ; Bar foreground color

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

; Font
font-0 = "Roboto Mono:size=12:weight:semibold;2"

; Modules left
modules-left = i3
; Modules right
modules-right = pulseaudio temperature date

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

; i3 module (shows workspaces)
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-mode-padding = 2

; Focused workspace
label-focused = %index%
label-focused-background = ${colors.bg-alt}
label-focused-underline= ${colors.underline-turquiose}
label-focused-padding = 2

; Unfocused workspace
label-unfocused = %index%
label-unfocused-padding = 2

; Active workspace on different monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; Urgent workspace
label-urgent = %index%
label-urgent-background = ${colors.warn}
label-urgent-padding = 2

; Time module
[module/date]
type = internal/date
interval = 5
time = %H:%M
format-underline = ${colors.underline-blue}
label = %time%

; Volume level
[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = %percentage%%
label-muted = 0%
format-underline = ${colors.underline-green}

; CPU temperature in Â°C
[module/temperature]
type = internal/temperature
thermal-zone = 0
format = <label>
format-underline = ${colors.underline-turquiose}
label = %temperature-c%